{
    "extends": "eslint:recommended",
    "plugins": [
        "angular"
    ],
    "env": {
        "browser": true,
        "jasmine": true
    },
    "globals": {
        "angular": true,
        "module": true,
        "inject": true
    },
    "rules": {
        "angular/controller-as-vm": [0, "vm"],
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ]
    }
}
